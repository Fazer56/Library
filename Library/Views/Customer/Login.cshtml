@*	To display a list of database data use.
	model IEnumerable<Library.Models.Customer>*@
@model Library.Models.Customer
@{
	ViewBag.Title = "Login";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
	<h2>
		Student Login


	</h2>



</div>

<div class="mb-5"></div>

@if (Session["Error"] != null)
{
	<h3>@Session["Error"].ToString()</h3>
}

@using (Html.BeginForm("Login", "Customer", FormMethod.Post))
{
	<form>
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true)
		@if (ViewBag.Message != null)
		{
			@ViewBag.Message
		}

		<fieldset>
			<div class="form-group">
				<div class="row">
					<div class="col-sm-3">
						<label for="exampleInputEmail1">Email address: </label>
						@Html.EditorFor(a => a.CustEmail, new { htmlAttributes = new { @class = "form-control", @type = "email", @placeholder = "Enter email" } })
						@Html.ValidationMessageFor(a => a.CustEmail, "", new { @class = "text-danger" })

						<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
					</div>
					<div class="col-sm-3"></div>
					<div class="col-sm-3"><img style="height: 250px; width: 100%; display: block;" src="~/image/DIT.jpg" alt="Card image"></div>
				</div>
				<div class="row">
					<div class="col-sm-3">
						<label for="exampleInputPassword1">Password: </label><br />
						@Html.EditorFor(a => a.CPassword, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Enter password" } })
						@Html.ValidationMessageFor(a => a.CPassword, "", new { @class = "text-danger" })

					</div>
					<div class="col-sm-3"></div>
					<div class="col-sm-3"></div>
				</div>
			</div>


		</fieldset>
		<button type="submit" class="btn btn-primary">Login</button>
	</form>
}


