@model Library.Models.ItemLibrarianViewModel
@{
	ViewBag.Title = "StaffArea";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="mt-3">

	<h2>Add Books</h2>

</div>

<button type="submit" class="btn btn-success" id="editBtn">Edit</button>
<button type="submit" class="btn btn-success" id="addBtn">Add</button>

<div class="container">
	<div class="mt-5"></div>
	@if (ViewBag.Success != null)
	{
		<h6><span style="color: lawngreen">Successfully Added: </span> @ViewBag.Success</h6>
	}
	@using (Html.BeginForm("StaffArea", "Librarian", FormMethod.Post))
	{

		<form>
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true)
			@if (ViewBag.Message != null)
			{
				@ViewBag.Message
			}
			@Html.ValidationSummary(false, "", new { @class = "text-danger" })
			<table class="table table-hover" id="bookTable" style="visibility: hidden;">
				<thead>
					<tr>
						<th scope="col">Book</th>
						<th scope="col">Author</th>
						<th scope="col">ISBN</th>
						<th scope="col">Subject</th>
						<th scope="col">Year</th>
					</tr>
				</thead>
				<tbody>
					<tr class="table-active">
						<td scope="col">@Html.EditorFor(a => a.Item.Name, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Book" } })</td>
						<td scope="col">@Html.EditorFor(a => a.Author.AuthName, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Author" } })</td>
						<td scope="col">@Html.EditorFor(a => a.Item.Isbn, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "ISBN" } })</td>
						<td scope="col">@Html.EditorFor(a => a.Item.Subject, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Subject" } })</td>
						<td scope="col">@Html.EditorFor(a => a.Item.Year, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Year" } })</td>
					</tr>
				</tbody>
			</table>
			<button type="submit" class="btn btn-success">Add Book</button>
		</form>
	}

</div>
<script>
	var add = document.getElementById("addBtn");
	add.addEventListener("click", function () {
		document.getElementById("bookTable").style.visibility = "visible";
	})
</script>