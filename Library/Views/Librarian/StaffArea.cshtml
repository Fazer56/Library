@model Library.Models.Librarian
@{
	ViewBag.Title = "StaffArea";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="mt-3">

	<h2>Add Books</h2>

</div>

<button type="submit" class="btn btn-success" id="editBtn">Edit</button>
<button type="submit" class="btn btn-success" id="addBtn">Add</button>

<div class="container">
	<div class="mt-5"></div>
	@using (Html.BeginForm("UserArea", "Librarian", FormMethod.Post))
	{

		<form>
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true)
			@if (ViewBag.Message != null)
			{
				@ViewBag.Message
			}
			@Html.ValidationSummary(false, "", new { @class = "text-danger" })
			<table class="table table-hover" id="bookTable" style="visibility: hidden;">
				<thead>
					<tr>
						<th scope="col">Book</th>
						<th scope="col">Author</th>
						<th scope="col">ISBN</th>
						<th scope="col">Publisher</th>
						<th scope="col">Subject</th>
						<th scope="col">Year</th>
					</tr>
				</thead>
				<tbody>

					<tr class="table-active">

						<th scope="row"><input class="form-control mr-sm-2" type="text" placeholder="Book"></th>
						<td>
							@*Html.EditorFor(a => a., new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Author" } })*@
							<input class="form-control mr-sm-2" type="text" placeholder="Author">
						</td>
						<td><input class="form-control mr-sm-2" type="text" placeholder="ISBN"></td>
						<td><input class="form-control mr-sm-2" type="text" placeholder="Publisher"></td>
						<td><input class="form-control mr-sm-2" type="text" placeholder="Subject"></td>
						<td><input class="form-control mr-sm-2" type="text" placeholder="Year"></td>

					</tr>
				</tbody>
			</table>
			<button type="submit" class="btn btn-success">Add Book</button>
		</form>
	}
</div>
@RenderSection("scripts", required: false)
<script>

</script>